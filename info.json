{
  "id": "playlistExporter",
  "type": "general",
  "version": "1.0.0",
  "title": "Playlist Exporter",
  "author": "CtznSniiips",
  "description": "Export selected playlists to M3U files with configurable path format",
  "minAppVersion": "5.0",
  "actions": [
    {
      "id": "exportPlaylists",
      "title": "Export Playlists",
      "type": "command",
      "category": "playlists"
    }
  ],
  "addonConfig": [
    {
      "key": "exportPath",
      "label": "Export Folder",
      "type": "folder",
      "defaultValue": ""
    },
    {
      "key": "exportAllPlaylists",
      "label": "Export All Playlists",
      "type": "boolean",
      "defaultValue": true
    },
    {
      "key": "useForwardSlash",
      "label": "Use Forward Slashes (Unix-style)",
      "type": "boolean",
      "defaultValue": true
    },
    {
      "key": "exportSelectedPlaylists",
      "label": "Selected Playlists (comma-separated IDs)",
      "type": "string",
      "defaultValue": ""
    }
  ]
}
